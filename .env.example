# AI CONTENT CREATOR - CONFIGURATION

# =============================================================================
# AI SERVICES
# =============================================================================

# Gemini AI API Key (get from https://ai.google.dev/)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# =============================================================================
# VEO ACCOUNTS (4 accounts for rotation)
# =============================================================================

VEO_ACCOUNT_1_USERNAME=email1@gmail.com
VEO_ACCOUNT_1_PASSWORD=password1

VEO_ACCOUNT_2_USERNAME=email2@gmail.com
VEO_ACCOUNT_2_PASSWORD=password2

VEO_ACCOUNT_3_USERNAME=email3@gmail.com
VEO_ACCOUNT_3_PASSWORD=password3

VEO_ACCOUNT_4_USERNAME=email4@gmail.com
VEO_ACCOUNT_4_PASSWORD=password4

# =============================================================================
# TELEGRAM BOT
# =============================================================================

# Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# SINGLE USER MODE (backward compatible)
TELEGRAM_CHAT_ID=your_chat_id

# MULTI-USER MODE (recommended for teams)
# Add multiple chat IDs separated by commas (no spaces needed)
# Example: TELEGRAM_AUTHORIZED_CHAT_IDS=123456789,987654321,555666777
# Get chat_id by messaging @userinfobot on Telegram
TELEGRAM_AUTHORIZED_CHAT_IDS=

# Note: If TELEGRAM_AUTHORIZED_CHAT_IDS is set, it will be used for authorization.
# If not set, TELEGRAM_CHAT_ID will be used (single user mode).
# Each user gets isolated message history - no interference between users.

# =============================================================================
# TIKTOK API (Content Posting API)
# =============================================================================

TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_AUTO_UPLOAD=true

# =============================================================================
# API CONFIGURATION
# =============================================================================

API_HOST=0.0.0.0
API_PORT=8070
API_RELOAD=true

# CORS Settings (comma-separated origins)
# For development: *
# For production: https://your-frontend.com,https://app.yourdomain.com
CORS_ORIGINS=*
